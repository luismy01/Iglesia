        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" 5 5 5 "
                android:id="@+id/txtAssistance"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#ff53abff"
                android:gravity="center_vertical"
                android:importantForAccessibility="no"
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                android:padding="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Enero"
                android:id="@+id/txtMonth"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/txtAssistance"
                android:gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="23, 2015"
                android:id="@+id/txtDayYear"
                android:layout_below="@+id/txtMonth"
                android:layout_toRightOf="@+id/txtAssistance"
                android:layout_toEndOf="@+id/txtAssistance"
                android:textStyle="italic"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>
<!--
    </android.support.v7.widget.CardView>
-->
</LinearLayout>